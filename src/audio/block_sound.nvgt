class BlockSound {
 string Block;
 EntityType Type;
 BlockSound(string block,EntityType type) {
  this.Block=block;
  this.Type=type;
 }
 sound @ PlayStep() {
  return sound_play(sounds_directory+"/blocks/"+(Type==Tile?"platforms/"+Block+"/"+random(1,5):"walls/"+Block)+".ogg"); 
 }
 sound @ PlayLand() {
  return sound_play(sounds_directory+"/blocks/"+(Type==Tile?"platforms/"+Block+"/land":"walls/"+Block)+".ogg"); 
 }
 sound @ PlayFall() {
  return sound_play(sounds_directory+"/blocks/"+(Type==Tile?"platforms/"+Block+"/fall":"walls/"+Block)+".ogg"); 
 }
 int opCmp(BlockSound@ other) {
  return this.Block.opCmp(other.Block);
 }
}