#include "../../src/person/person.nvgt"

void test_person_move_down()
{
  string definition = "ladr fx0 tx0 fy0 ty10 mlmetal";
  Map map;
  map.Parse(definition);
  map.CreateGrids();
  Person p(0, 10, map);
  assert(p.Move(Down) == Moved);
  assert(p.Block != null);
  assert(p.Block.Material == "metal");
  assert(p.X == 0);
  assert(p.Y == 9);
}