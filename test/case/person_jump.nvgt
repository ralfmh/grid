#include "../../src/person/person.nvgt"

void test_person_jump()
{
  string definition = "tile fx0 tx10 fy0 mlstone";
  Map map;
  string[] errors = map.Parse(definition);
  assert(errors.length() == 0);
  map.CreateGrids();
  Person p(0, 0, map);
  p.Jump();
  p.AutoMove();
  assert(p.Y == 1);
  p.AutoMove();
  assert(p.Y == 2);
  p.AutoMove();
  assert(p.Y == 3);
  p.AutoMove();
  assert(p.Y == 4);
  p.AutoMove();
  assert(p.Y == 5);
  assert(p.AutoMoveState == Falling);
}