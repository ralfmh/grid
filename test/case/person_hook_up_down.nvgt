#include "../../src/person/person.nvgt"

void test_person_hook_up_down()
{
  string definition = "tile fx0 tx10 fy0 mlstone" + LINE_SEPARATOR;
  definition += "tile fx5 tx5 fy10 mlwood" + LINE_SEPARATOR;
  definition += "tile fx6 tx6 fy15 mlfence";
  Map map;
  string[] errors = map.Parse(definition);
  assert(errors.length() == 0);
  map.CreateGrids();
  Person p(5, 10, map);
  p.Hook(Up, 1);
  assert(p.Hooked);
  p.Move(Down);
  assert(!p.Hooked);
  assert(p.AutoMoveState == Falling, "Expected falling, got "
         + AutoMoveStateName[p.AutoMoveState]);
}