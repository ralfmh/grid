#include "../../src/person/person.nvgt"

void test_person_sonar_ladder()
{
  string definition = "tile fx0 tx4 fy0 mlstone" + LINE_SEPARATOR;
  definition += "ladr fx5 tx6 fy0 ty10 mlmetal";
  Map map;
  string[] errors = map.Parse(definition);
  assert(errors.length() == 0);
  map.CreateGrids();
  Person p(0, 0, map);
  vector position;
  EntityType type;
  assert(p.Sonar(Right, position, type));
  assert(position == vector(5,0,0));
  assert(type == Ladder);
}